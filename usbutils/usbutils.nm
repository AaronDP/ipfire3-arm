name       = usbutils
epoch      = 1
version    = 005
release    = 1

groups     = System/Tools
url        = http://www.linux-usb.org/
license    = GPLv2
summary    = Tool to provide and enhance USB support in Linux.

description
	A set of tools to configure list USB Devices.
end

source_dl  = http://www.kernel.org/pub/linux/utils/usb/usbutils/

build
	requires
		autoconf
		automake
		hwdata
		libusb-devel
		pkg-config
		zlib-devel
	end

	prepare_cmds
		./autogen.sh
	end

	install_cmds
		# Removing lsusb.py.
		rm -rfv %{BUILDROOT}/usr/bin/lsusb.py
	end
end

packages
	package %{name}
		requires
			/usr/share/hwdata/usb.ids
		end
	end

	package %{name}-libs
		template LIBS
	end

	package %{name}-devel
		template DEVEL

		requires = %{name}-libs = %{epoch}:%{thisver}
	end

	package %{name}-debuginfo
		template DEBUGINFO
	end
end
