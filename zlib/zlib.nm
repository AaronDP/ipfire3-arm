name       = zlib
version    = 1.2.5
release    = 2

groups     = System/Libraries
url        = http://www.gzip.org/zlib/
license    = zlib
summary    = The zlib compression and decompression library.

description
	Zlib is a general-purpose, patent-free, lossless data compression
	library which is used by many different programs.
end

source_dl  = http://zlib.net/

# Enable PIC build.
CFLAGS    += -fPIC -DPIC

build
	configure_options = \
		--prefix=/usr \
		--libdir=/lib

	test
		make check
	end

	install_cmds
		mkdir -pv %{BUILDROOT}/usr/{include,lib}
		cp -pfv zconf.h zlib.h %{BUILDROOT}/usr/include
		rm -vf %{BUILDROOT}/lib/libz.so
		ln -sfv ../../lib/libz.so.%{version} %{BUILDROOT}/usr/lib/libz.so

		mv -v %{BUILDROOT}/lib/pkgconfig %{BUILDROOT}/usr/lib/
	end
end

packages
	package %{name}
	end
	
	package %{name}-devel
		template DEVEL
	end
end
