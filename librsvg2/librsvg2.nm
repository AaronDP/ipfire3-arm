name       = librsvg2
version    = 2.34.1
major_ver  = 2.34
release    = 2

groups     = System/Libraries
url        =
license    = LGPLv2+
summary    = A SVG library based on cairo.

description
	librsvg is a SVG library based on cairo.
end

thisapp    = librsvg-%{version}

source_dl  = http://download.gnome.org/sources/librsvg/%{major_ver}/
sources    = %{thisapp}.tar.xz

build
	requires
		cairo-devel
		gdk-pixbuf2-devel
		glib2-devel
		libcroco-devel
		libxml2-devel
		pango-devel
	end

	export GDK_PIXBUF_QUERYLOADERS=%{bindir}/gdk-pixbuf-query-loaders

	configure_options += \
		--disable-static \
		--disable-gtk-theme \
		enable_pixbuf_loader=yes
end

packages
	package %{name}
		script postin
			gdk-pixbuf-query-loaders --update-cache || :
		end

		script postun
			gdk-pixbuf-query-loaders --update-cache || :
		end

		script postup
			gdk-pixbuf-query-loaders --update-cache || :
		end
	end

	package %{name}-devel
		template DEVEL
	end

	package %{name}-debuginfo
		template DEBUGINFO
	end
end
