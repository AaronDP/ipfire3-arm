#!/bin/bash

. $(dirname ${0})/qa-include

function check() {
	local dir=${1}

	log "    ...${dir}"

	if [ -d "${BUILDROOT}/${dir}" ]; then
		log "ERROR: This directory should not be there: ${dir}"
		exit 1
	fi
}

log "Check directory layout"

log "  Checking for directories that should not be there"
check /lib/pkgconfig
check /usr/man

exit 0
