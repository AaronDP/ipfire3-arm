#!/bin/bash

. $(dirname ${0})/qa-include

DESC="The filelayout should comply to the FHS."

DIRS="/etc/init.d /etc/rc.d /lib/pkgconfig /usr/etc /usr/local /usr/man /usr/var"

function check() {
	local failed=0

	local dir
	for dir in ${DIRS}; do
		if [ -d "${dir}" ]; then
			log_error "Bad directory: ${dir}"
			failed=1
		fi
	done

	return ${failed}
}

run
