name       = libSM
version    = 1.2.2
release    = 1

maintainer = Stefan Schantl <stefan.schantl@ipfire.org>
groups     = X/Libraries
url        = http://www.x.org/
license    = MIT
summary    = X.Org X11 libSM runtime library.

description
	X.Org X11 libSM development package.
end

source_dl  = http://ftp.x.org/pub/individual/lib/

build
	requires
		libICE-devel
		libuuid-devel
		xorg-x11-proto-devel
		xorg-x11-xtrans-devel
	end

	configure_options += \
		--disable-static
end

packages
	package %{name}

	package %{name}-devel
		template DEVEL
	end

	package %{name}-debuginfo
		template DEBUGINFO
	end
end
