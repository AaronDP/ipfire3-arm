name       = libksba
version    = 1.0.8
release    = 1

groups     = System/Libraries
url        = http://www.gnugp.org
license    = GPLv3
summary    = X.509 Library.

description
	KSBA is a library designed to build software based on the X.509 and \
	CMS protocols.
end

source_dl  =
sources    = %{thisapp}.tar.bz2

build
	requires
		libgpg-error-devel
	end
end

packages
	package %{name}
	end
	
	package %{name}-devel
		template DEVEL
	end
end
