name       = libXft
version    = 2.3.1
release    = 1

maintainer = Stefan Schantl <stefan.schantl@ipfire.org>
groups     = X/Libraries
url        = http://www.x.org/
license    = MIT
summary    = X.Org X11 libXft runtime library.

description
	X.Org X11 libXft runtime library.
end

source_dl  = http://ftp.x.org/pub/individual/lib/

build
	requires
		fontconfig-devel
		freetype-devel
		libXrender-devel
		pkg-config
		xorg-x11-proto-devel
	end

	configure_options += \
		--disable-static
end

packages
	package %{name}

	package %{name}-devel
		template DEVEL
	end

	package %{name}-debuginfo
		template DEBUGINFO
	end
end
