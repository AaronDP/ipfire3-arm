include $(PKGROOT)/Include

PKG_NAME       = libxslt
PKG_VER        = 1.1.26
PKG_REL        = 0

PKG_MAINTAINER = Stefan Schantl <stefan.schantl@ipfire.org>
PKG_GROUP      = Development/Libraries
PKG_URL        = http://xmlsoft.org/XSLT/
PKG_LICENSE    = MIT
PKG_SUMMARY    = Library providing the Gnome XSLT engine.

PKG_BUILD_DEPS+= libgcrypt-devel libxml2-devel pkg-config

PKG_PACKAGES  += $(PKG_NAME)-devel

define PKG_DESCRIPTION
	This C library allows to transform XML files into other XML files \
	(or HTML, text, ...) using the standard XSLT stylesheet transformation \
	mechanism.
endef

PKG_TARBALL    = $(THISAPP).tar.gz
