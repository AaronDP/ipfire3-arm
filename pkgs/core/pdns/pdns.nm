###############################################################################
# Definitions
###############################################################################

include $(PKGROOT)/Include

PKG_NAME       = pdns
PKG_VER        = 2.9.22
PKG_REL        = 0

PKG_MAINTAINER =
PKG_GROUP      = Networking/DNS
PKG_URL        = http://powerdns.com/
PKG_LICENSE    = GPLv2
PKG_SUMMARY    = A modern, advanced and high performance authoritative-only nameserver.

PKG_DEPS      += boost openldap sqlite zlib

define PKG_DESCRIPTION
	The PowerDNS Nameserver is a modern, advanced and high performance \
	authoritative-only nameserver. It is written from scratch and conforms \
	to all relevant DNS standards documents. \
	Furthermore, PowerDNS interfaces with almost any database.
endef

PKG_TARBALL    = $(THISAPP).tar.gz

export CPPFLAGS = -DLDAP_DEPRECATED

CONFIGURE_OPTIONS += \
	--sysconfdir=/etc/pdns \
	--libdir=/usr/lib/powerdns \
	--with-modules="" \
	--with-dynmodules="pipe geo ldap gsqlite3"
