###############################################################################
# Definitions
###############################################################################

include $(PKGROOT)/Include

PKG_NAME       = eventlog
PKG_VER        = 0.2.9
PKG_REL        = 0

PKG_MAINTAINER =
PKG_GROUP      = System/Libraries
PKG_URL        = http://www.balabit.com/
PKG_LICENSE    = GPLv2+
PKG_SUMMARY    = Eventlog is an API for syslog-ng.

define PKG_DESCRIPTION
	A new API to format and send structured log messages. It supports multiple \
	message representations (plain, XML attributes and XML tags) and multiple \
	output methods (local syslogd).
endef

PKG_TARBALL    = $(THISAPP).tar.gz

CONFIGURE_OPTIONS += --libdir=/lib

define STAGE_INSTALL_CMDS
	-mkdir -pv $(BUILDROOT)/usr/lib
	rm -vf $(BUILDROOT)/lib/libevtlog.so
	ln -svf ../../lib/libevtlog.so.0 $(BUILDROOT)/usr/lib/libevtlog.so

	mv -v $(BUILDROOT)/lib/pkgconfig $(BUILDROOT)/usr/lib/
endef
