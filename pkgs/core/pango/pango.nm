###############################################################################
# Definitions
###############################################################################

include $(PKGROOT)/Include

PKG_NAME       = pango
PKG_VER        = 1.22.3
PKG_REL        = 0

PKG_MAINTAINER =
PKG_GROUP      = System/Libraries
PKG_URL        = http://www.pango.org/
PKG_LICENSE    = LGPLv2+
PKG_SUMMARY    = System for layout and rendering of internationalized text.

PKG_BUILD_DEPS+= pkg-config
PKG_DEPS      += cairo fontconfig glib2

define PKG_DESCRIPTION
	Pango is a library for laying out and rendering of text, with an \
	emphasis on internationalization.
endef

PKG_TARBALL    = $(THISAPP).tar.bz2

CONFIGURE_OPTIONS += \
	--sysconfdir=/etc
