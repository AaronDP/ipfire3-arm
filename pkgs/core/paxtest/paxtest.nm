###############################################################################
# Definitions
###############################################################################

include $(PKGROOT)/Include

PKG_NAME       = paxtest
PKG_VER        = 0.9.7-pre4
PKG_REL        = 0

PKG_MAINTAINER =
PKG_GROUP      = Security/Tools
PKG_URL        = http://pax.grsecurity.org/
PKG_LICENSE    = GPLv2+
PKG_SUMMARY    = Utilities for testing PaX configuration.

define PKG_DESCRIPTION
	This package contains several files for checking the PaX configuration \
	and checks if it all works correctly.
endef

PKG_TARBALL    = $(THISAPP).tar.gz

define STAGE_BUILD
	cd $(DIR_APP) && make -f Makefile.generic RUNDIR=/usr/lib/paxtest \
		$(PARALLELISMFLAGS)
endef

define STAGE_INSTALL
	cd $(DIR_APP) && make -f Makefile.generic install DESTDIR=$(BUILDROOT) \
		RUNDIR=/usr/lib/paxtest BINDIR=/usr/bin
endef
