
PKG_TOOLCHAIN_DEPS = # No deps

include ../../core/binutils/binutils.nm

define STAGE_BUILD
	cd $(DIR_SRC)/binutils-build && \
		../$(THISAPP)/configure \
			--target=$(TARGET) \
			--prefix=$(TOOLS_DIR) \
			--disable-nls \
			--disable-werror

	cd $(DIR_SRC)/binutils-build && make $(PARALLELISMFLAGS)
endef

define STAGE_INSTALL
	cd $(DIR_SRC)/binutils-build && make install
endef
