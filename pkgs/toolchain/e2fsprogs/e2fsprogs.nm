
PKG_TOOLCHAIN_DEPS += gcc glibc

include ../../core/e2fsprogs/e2fsprogs.nm

define STAGE_BUILD
	cd $(DIR_APP)/build && \
		../configure \
			$(CONFIGURE_ARCH) \
			--prefix=$(TOOLS_DIR) \
			--enable-elf-shlibs

	cd $(DIR_APP)/build && make $(PARALLELISMFLAGS)
endef

define STAGE_INSTALL
	cd $(DIR_APP)/build && make install-libs
endef
