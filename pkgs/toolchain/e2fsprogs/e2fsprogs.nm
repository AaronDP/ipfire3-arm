
include ../../core/e2fsprogs/e2fsprogs.nm

$(STAGE_BUILD): $(STAGE_PREPARE)
	@$(PRE_BUILD)

	cd $(DIR_APP)/build && \
		../configure \
			$(CONFIGURE_ARCH) \
			--prefix=$(TOOLS_DIR) \
			--enable-elf-shlibs

	cd $(DIR_APP)/build && make $(PARALLELISMFLAGS)

	@$(POST_BUILD)


$(STAGE_INSTALL): $(STAGE_BUILD)
	@$(PRE_INSTALL)

	cd $(DIR_APP)/build && make install-libs

	@$(POST_INSTALL)
