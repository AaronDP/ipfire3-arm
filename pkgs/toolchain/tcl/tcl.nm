
PKG_TOOLCHAIN_DEPS += gcc glibc

include ../../core/tcl/tcl.nm

define STAGE_BUILD
	cd $(DIR_APP) && \
		./configure \
			--prefix=$(TOOLS_DIR) \
			--disable-nls \
			--enable-shared

	cd $(DIR_APP) && make $(PARALLELISMFLAGS)
endef

define STAGE_INSTALL
        cd $(DIR_APP) && make install
	cd $(DIR_APP) && make install-private-headers
endef
