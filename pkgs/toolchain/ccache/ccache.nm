
PKG_TOOLCHAIN_DEPS += gcc glibc zlib

include ../../core/ccache/ccache.nm

define STAGE_BUILD
	cd $(DIR_APP) && \
		./configure \
			--prefix=$(TOOLS_DIR) \

	cd $(DIR_APP) && make $(PARALLELISMFLAGS)
endef

define STAGE_INSTALL_CMDS
	mkdir -pv $(TOOLS_DIR)/usr/ccache/bin
	for i in gcc g++ cc c++; do \
		ln -svf ../../../bin/ccache $(TOOLS_DIR)/usr/ccache/bin/$${i}; \
		ln -svf ../../../bin/ccache $(TOOLS_DIR)/usr/ccache/bin/$(TARGET)-$${i}; \
	done
endef
