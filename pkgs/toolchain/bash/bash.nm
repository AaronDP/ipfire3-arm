
PKG_TOOLCHAIN_DEPS += gcc glibc

include ../../core/bash/bash.nm

define STAGE_BUILD
	cd $(DIR_APP) && \
		ac_cv_func_working_mktime=yes \
		./configure \
			--prefix=$(TOOLS_DIR) \
			--without-bash-malloc

	cd $(DIR_APP) && make #$(PARALLELISMFLAGS)
endef

define STAGE_INSTALL
	cd $(DIR_APP) && make install

	ln -svf bash $(TOOLS_DIR)/bin/sh
endef
