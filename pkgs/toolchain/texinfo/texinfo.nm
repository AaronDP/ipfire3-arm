
PKG_TOOLCHAIN_DEPS += $(TC_PACKAGES) ncurses

include ../../core/texinfo/texinfo.nm

$(STAGE_BUILD): $(STAGE_PREPARE)
	@$(PRE_BUILD)

	cd $(DIR_APP) && \
		LDFLAGS="-lncursesw" \
		./configure \
			$(CONFIGURE_ARCH) \
			--prefix=$(TOOLS_DIR)

	cd $(DIR_APP) && make $(PARALLELISMFLAGS)

	@$(POST_BUILD)
