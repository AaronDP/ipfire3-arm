
PKG_TOOLCHAIN_DEPS += gcc glibc tcl

include ../../core/expect/expect.nm

define STAGE_BUILD
	cd $(DIR_APP) && \
		./configure \
			--prefix=$(TOOLS_DIR) \
			--with-tcl=$(TOOLS_DIR)/lib \
		        --with-tclinclude=$(TOOLS_DIR)/include/ \
        		--with-x=no \
			--disable-nls \
			--enable-shared

	cd $(DIR_APP) && make $(PARALLELISMFLAGS)
endef

define STAGE_INSTALL
        cd $(DIR_APP) && make install
endef


