
PKG_TOOLCHAIN_DEPS += acl attr gcc glibc ncurses

include ../../core/coreutils/coreutils.nm

define STAGE_BUILD
	cd $(DIR_APP) && \
		gl_cv_func_printf_directive_n=no \
		./configure \
			--prefix=$(TOOLS_DIR) \
			--enable-install-program=hostname

	cd $(DIR_APP) && make $(PARALLELISMFLAGS)
endef

