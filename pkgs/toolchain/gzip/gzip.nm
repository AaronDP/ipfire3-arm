
include ../../core/gzip/gzip.nm

$(STAGE_BUILD): $(STAGE_PREPARE)
	@$(PRE_BUILD)

	# NO_ASM is for textrels.
	cd $(DIR_APP) && \
		DEFS=NO_ASM \
		CPPFLAGS="-DHAVE_LSTAT" \
		./configure \
			$(CONFIGURE_ARCH) \
			--prefix=$(TOOLS_DIR)

	cd $(DIR_APP) && make $(PARALLELISMFLAGS)

	@$(POST_BUILD)


$(STAGE_INSTALL): $(STAGE_BUILD)
	@$(PRE_INSTALL)

	cd $(DIR_APP) && make install

	@$(POST_INSTALL)
