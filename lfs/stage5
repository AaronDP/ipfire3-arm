###############################################################################
# Definitions
###############################################################################

include Config

PKG_NAME   = stage5
PKG_VER    =
PKG_REL    = -1

THISAPP    = $(PKG_NAME)

OBJECT     = $(DIR_INFO)/$(STAGE_ORDER)_$(STAGE)/$(THISAPP)

MAINTAINER =
GROUP      =
CORE       = no
EXTRA      = no
DEBUG      = no
DEPS       =

URL        =
LICENSE    =
SHORT_DESC = This script initializes stage 5.

define LONG_DESC
	This script initializes stage 5.
endef

###############################################################################
# Top-level Rules
###############################################################################

objects =

download: $(objects)

info:
	$(DO_PKG_INFO)

install: $(OBJECT)

package:
	@$(DO_PACKAGE)

$(objects):
	@$(LOAD)

###############################################################################
# Installation Details
###############################################################################

$(OBJECT): $(objects)
	@$(PREBUILD)
	-mkdir -pv $(INSTALLER_DIR)/{etc,sbin,usr/lib}
	cp -avf $(DIR_SOURCE)/install/* $(INSTALLER_DIR)
	@$(POSTBUILD)
