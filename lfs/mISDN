###############################################################################
# Definitions
###############################################################################

include Config

VER        = 1_1_5

THISAPP    = mISDNuser-$(VER)
DL_FILE    = $(THISAPP).tar.gz
DL_FROM    = $(URL_IPFIRE)
DIR_APP    = $(DIR_SRC)/$(THISAPP)
TARGET     = $(DIR_INFO)/$(THISAPP)

###############################################################################
# Top-level Rules
###############################################################################

objects = $(DL_FILE)

$(DL_FILE) = $(DL_FROM)/$(DL_FILE)

$(DL_FILE)_MD5 = 45bf90350ac8f8e1845c02e293126d70

install : $(TARGET)

check : $(patsubst %,$(DIR_CHK)/%,$(objects))

download : $(objects)

md5 : $(subst %,%_MD5,$(objects))

###############################################################################
# Downloading, checking, md5sum
###############################################################################

$(patsubst %,$(DIR_CHK)/%,$(objects)) :
	@$(CHECK)

$(objects) :
	@$(LOAD)

$(subst %,%_MD5,$(objects)) :
	@$(MD5)

###############################################################################
# Installation Details
###############################################################################

$(TARGET) : 
	@$(PREBUILD)
	@rm -rf $(DIR_APP) && cd $(DIR_SRC) && tar zxf $(DIR_DL)/$(DL_FILE)
	cd $(DIR_APP) && make MISDNDIR=/usr/src/linux
	cd $(DIR_APP) && make install MISDNDIR=/usr/src/linux
	-mkdir -p /usr/lib/mISDN
	cd $(DIR_SRC) && tar xfz $(DIR_DL)/mISDN-$(VER).tar.gz
	cd $(DIR_SRC)/mISDN-$(VER) && cp -v config/*.xsl /usr/lib/mISDN
	@rm -rf $(DIR_SRC)/mISDN*
	@$(POSTBUILD)
