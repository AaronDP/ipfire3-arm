###############################################################################
# Definitions
###############################################################################

include Config

PKG_NAME   = pdns-recursor
PKG_VER    = 3.1.7
PKG_REL    = 0

THISAPP    = $(PKG_NAME)-$(PKG_VER)
DL_FILE    = $(THISAPP).tar.bz2
DIR_APP    = $(DIR_SRC)/$(THISAPP)

OBJECT     = $(DIR_INFO)/$(STAGE_ORDER)_$(STAGE)/$(THISAPP)

MAINTAINER =
GROUP      = Networking/DNS
CORE       = yes
EXTRA      = no
DEBUG      = no
BUILD_DEPS =
DEPS       = lua boost

URL        = http://powerdns.com/
LICENSE    = GPLv2
SHORT_DESC = A modern, advanced and high performance recursing nameserver.

define LONG_DESC
	PowerDNS Recursor is a non authoritative/recursing DNS server. Use this \
	package if you need a dns cache for your network.
endef

###############################################################################
# Top-level Rules
###############################################################################

objects = $(DL_FILE) \
	$(THISAPP)-boost.patch \
	$(THISAPP)-gcc44-fixes.patch

download: $(objects)

info:
	$(DO_PKG_INFO)

install: $(OBJECT)

package:
	@$(DO_PACKAGE)

$(objects):
	@$(LOAD)

###############################################################################
# Installation Details
###############################################################################

$(OBJECT): $(objects)
	@$(PREBUILD)
	@rm -rf $(DIR_APP) && cd $(DIR_SRC) && $(EXTRACTOR) $(DIR_DL)/$(DL_FILE)
	cd $(DIR_APP) && patch -Np1 -i $(DIR_PATCHES)/$(THISAPP)-boost.patch
	cd $(DIR_APP) && patch -Np1 -i $(DIR_PATCHES)/$(THISAPP)-gcc44-fixes.patch
	cd $(DIR_APP) && LUA=1 LUA_CPPFLAGS_CONFIG= LUA_LIBS_CONFIG=-llua \
		make OPTFLAGS= PROFILEFLAGS=-fprofile-use #$(PARALLELISMFLAGS)
	cd $(DIR_APP) && make install
	@rm -rf $(DIR_APP)
	@$(POSTBUILD)
