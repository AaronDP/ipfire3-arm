###############################################################################
# Definitions
###############################################################################

include Config

PKG_NAME   = busybox
VER        = 1.10.0

THISAPP    = $(PKG_NAME)-$(VER)
DL_FILE    = $(THISAPP).tar.bz2
DIR_APP    = $(DIR_SRC)/$(THISAPP)

TARGET     = $(DIR_INFO)/$(STAGE_ORDER)_$(STAGE)/$(THISAPP)

###############################################################################
# Top-level Rules
###############################################################################

objects = $(DL_FILE)

install: $(TARGET)

download :$(patsubst %,$(DIR_DL)/%,$(objects))

$(patsubst %,$(DIR_DL)/%,$(objects)) :
	@$(LOAD)

###############################################################################
# Installation Details
###############################################################################

$(TARGET) : $(patsubst %,$(DIR_DL)/%,$(objects))
	@$(PREBUILD)
	@rm -rf $(DIR_APP) && cd $(DIR_SRC) && tar jxf $(DIR_DL)/$(DL_FILE)
	cd $(DIR_APP) && cp -vf $(DIR_CONFIG)/$(PKG_NAME)/.config .config
	sed -e "s@^CONFIG_PREFIX=.*@CONFIG_PREFIX=\"$(INSTALLER_DIR)\"@g" \
		-i $(DIR_APP)/.config
	cd $(DIR_APP) && make ARCH=i386 \
		CROSS_COMPILE=$(UCLIBC_TARGET)- \
		CROSS=$(UCLIBC_TARGET)- \
		oldconfig
	cd $(DIR_APP) && make ARCH=i386 \
		CROSS_COMPILE=$(UCLIBC_TARGET)- \
		CROSS=$(UCLIBC_TARGET)- \
		-j $(PARALLELISM)
	cd $(DIR_APP) && make ARCH=i386 \
		CROSS_COMPILE=$(UCLIBC_TARGET)- \
		CROSS=$(UCLIBC_TARGET)- \
		PREFIX=$(INSTALLER_DIR) \
		install
	-rm -vf $(INSTALLER_DIR)/linuxrc
	-mkdir -p $(INSTALLER_DIR)/usr/share/udhcpc/
	install -m 755 -v $(DIR_CONF)/busybox/default.script \
		$(INSTALLER_DIR)/usr/share/udhcpc/
	@rm -rf $(DIR_APP)
	@$(POSTBUILD)
