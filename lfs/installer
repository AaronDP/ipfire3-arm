###############################################################################
# Definitions
###############################################################################

include Config

PKG_NAME   = infire
VER        = ipfire

THISAPP    = $(PKG_NAME)
DIR_APP    = $(DIR_SOURCE)/$(THISAPP)

TARGET     = $(DIR_INFO)/$(STAGE_ORDER)_$(STAGE)/$(THISAPP)

###############################################################################
# Top-level Rules
###############################################################################

install : $(TARGET)

download :


###############################################################################
# Installation Details
###############################################################################

$(TARGET) :
	@$(PREBUILD)
	cd $(DIR_APP) && make -C po update-po
	cd $(DIR_APP) && make install DESTDIR=$(INSTALLER_DIR)
	cd $(DIR_APP) && make clean
	@$(POSTBUILD)
