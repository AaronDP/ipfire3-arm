###############################################################################
# Definitions
###############################################################################

include Config

PKG_NAME   = uClibc
VER        = 0.9.29

THISAPP    = $(PKG_NAME)-$(VER)
DL_FILE    = $(THISAPP).tar.bz2
DIR_APP    = $(DIR_SRC)/$(THISAPP)

LOCALE_FILE = $(PKG_NAME)-locale-030818.tgz

TARGET = $(DIR_INFO)/$(STAGE_ORDER)_$(STAGE)/$(THISAPP)-pass$(PASS)

###############################################################################
# Top-level Rules
###############################################################################

objects = $(DL_FILE) $(LOCALE_FILE)

install : $(TARGET)

download : $(objects)

$(objects) :
	@$(LOAD)

###############################################################################
# Installation Details
###############################################################################

$(TARGET) : 
	@$(PREBUILD)
	@rm -rf $(DIR_APP) && cd $(DIR_SRC) && tar jxf $(DIR_DL)/$(DL_FILE)
	
	## Copy configuration
	cp -f $(DIR_CONF)/$(PKG_NAME)/.config $(DIR_APP)/.config
	cp -f $(DIR_DL)/$(LOCALE_FILE) $(DIR_APP)/extra/locale

ifeq "$(PASS)" "1"
	# Make headers
	cd $(DIR_APP) && make CROSS= PREFIX="${UCLIBC_SYSROOT_DIR}/" headers
	cd $(DIR_APP) && make CROSS= PREFIX="${UCLIBC_SYSROOT_DIR}/" install_dev
endif

ifeq "$(PASS)" "2"
	cd $(DIR_APP) && make CROSS=$(UCLIBC_TARGET)- \
		PREFIX=$(UCLIBC_SYSROOT_DIR)/ \
		all install
endif

	@rm -rf $(DIR_APP)
	@$(POSTBUILD)
